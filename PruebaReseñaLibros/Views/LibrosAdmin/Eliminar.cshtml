@model PruebaReseñaLibros.Models.Libros

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2>Eliminar Libro</h2>

<h3>¿Está seguro de que desea eliminar este libro?</h3>
<div>
    <h4>@Model.TituloLibro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Model.AutorLibro
        </dd>
        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Model.Categoria
        </dd>
        <dt class="col-sm-2">
            Idioma
        </dt>
        <dd class="col-sm-10">
            @Model.Idioma
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Model.Precio
        </dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="IdTitulo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="ListarLibros" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
