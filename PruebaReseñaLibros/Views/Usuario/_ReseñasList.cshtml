@model IEnumerable<PruebaReseñaLibros.Models.Reseñas>

<div class="reviews-container">
    <h3 class="reviews-title">Reseñas</h3>
    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var reseña in Model)
            {
                <div class="list-group-item review-item">
                    <div class="review-header">
                        <strong class="review-user">@reseña.Usuario</strong>
                        <span class="review-date">@reseña.FechaCreacion.ToString("dd/MM/yyyy")</span>
                    </div>
                    <p class="review-content">@reseña.Contenido</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-reviews">No hay reseñas para este libro.</p>
    }
</div>

<style>
    .reviews-container {
        margin-top: 20px;
    }

    .reviews-title {
        font-size: 1.5em;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .review-item {
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
        padding: 15px;
        background-color: #f9f9f9;
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .review-user {
        font-weight: bold;
        font-size: 1.2em;
    }

    .review-date {
        font-size: 0.9em;
        color: #999;
    }

    .review-content {
        font-size: 1em;
        color: #555;
    }

    .no-reviews {
        text-align: center;
        font-size: 1.2em;
        color: #999;
    }
</style>